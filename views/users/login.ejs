<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <!-- Login Card -->
      <div class="card shadow">
        <!-- Card Image -->
        <img
          src="https://images.unsplash.com/photo-1517824806704-9040b037703b?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <!-- Login Form -->
          <form action="/login" method="post" class="validated-form" novalidate>
            <!-- Username Input -->
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                autofocus
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <!-- Password Input -->
            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <!-- Submit Button -->
            <button class="btn btn-success d-block w-100">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
